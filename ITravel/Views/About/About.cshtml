@inject ITravel.Models.LanguageService lang
@{
    Layout = "/Views/Shared/_Layout.cshtml";
}


<!-- end nav -->
<section class="inner-banner" style="background-image:url(@Url.Content("~/images/banner/sub-page.png"));">
        <div class="container">
            <div class="row">
                <div class="col-md-12 text-center">
                    <div class="banner-content">
                    <h2>@lang.GetKey("about_us")</h2>
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                            <li class="breadcrumb-item"> <a href="@Url.Action("Index", "Home")">@lang.GetKey("home")</a> </li>
                            <li class="breadcrumb-item active" aria-current="page">@lang.GetKey("about_us")</li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- end banner -->
    <!-- start about us -->
    <section class="section-spacing about-us">
        <div class="container">
            <div class="row">
                <div class="col-lg-5 col-md-12 col-sm-12">
                    <div class="about-us-left" data-cues="slideInUp">
                    <h3 class="mt-n6">@lang.GetKey("about_company")</h3>
                    <p>@lang.GetKey("about_text_1")</p>
                        <div class="about-info" data-cues="slideInLeft">
                            <div class="d-flex">
                                <div class="flex-shrink-0">
                                    <span class="align-self-start mr-3 media-icon">
                                        <i class="far fa-compass"></i>
                                    </span>
                                </div>
                                <div class="flex-grow-1 ms-3">
                                <h5 class="mt-0">@lang.GetKey("quick_booking")</h5>
                                <p>@lang.GetKey("quick_booking_text")</p>
                                </div>
                            </div>
                            <div class="d-flex">
                                <div class="flex-shrink-0">
                                    <span class="align-self-start mr-3 media-icon">
                                        <i class="fas fa-briefcase"></i>
                                    </span>
                                </div>
                                <div class="flex-grow-1 ms-3">
                                <h5 class="mt-0">@lang.GetKey("favorable_prices")</h5>
                                <p>@lang.GetKey("favorable_prices_text")</p>
                                </div>
                            </div>
                            <div class="d-flex">
                                <div class="flex-shrink-0">
                                    <span class="align-self-start mr-3 media-icon">
                                        <i class="fas fa-umbrella-beach"></i>
                                    </span>
                                </div>
                                <div class="flex-grow-1 ms-3">
                                <h5 class="mt-0">@lang.GetKey("any_tours")</h5>
                                <p>@lang.GetKey("any_tours_text")</p>
                                </div>
                            </div>
                        </div>
                        <div class="cta-button">
                        <a href="@Url.Action("Booking", "Booking")" class="btn btn-primary">@lang.GetKey("booking_now")</a>
                        </div>
                    </div>
                </div>
                <div class="col-lg-7 col-md-12 col-sm-12">
                    <div class="about-right">
                        <img class="tilt-img" src="~/images/about/1.png" alt="">
                    </div>
                </div>

            <form class="row g-3">
                <div class="col-sm-12">
                    <h2 class="form-hader"> @lang.GetKey("payment_methods") </h2>
                </div>
                <div class="col-md-12">
                    <input type="text" class="form-control booking-from" id="inputAddress" placeholder="@lang.GetKey("name")">
                </div>
                <div class="col-md-12">
                    <input type="text" class="form-control" id="inputAddress2" placeholder="@lang.GetKey("amount")">
                </div>

                <div class="col-12">
                    <button asp-controller="Booking" asp-action="PaymePay" type="submit" class="booking-bt btn btn-primary" style="background-image: url(@Url.Content("~/images/features/payme_01.png")); height:60px;"><img src="~/images/features/payme_01.png" alt="" class="rounded" style="height:50px; margin-bottom:25px; margin-top:-10px;"></button>
                </div>
            </form>
            </div>
        </div>
    </section>
    <!-- end about us -->
    <!-- start features -->
<section class="section-spacing features" style="background-image: url(@Url.Content("~/images/features/1.png"));">
        <div class="container">
            <div class="row justify-content-end">
                <div class="col-lg-5" data-cues="slideInUp">
                <h2>@lang.GetKey("about_text_3")</h2>
                <p>@lang.GetKey("about_text_2")</p>
                    <div class="play-button" data-cues="slideInRight">
                        <a href="javascript:void(0)" data-bs-toggle="modal" data-bs-target="#video-modal">
                            <i class="fa fa-play"></i>
                        </a>
                    </div>
                    <div class="features-items" data-cues="slideInRight">
                        <div class="feature-item">
                            <h3>
                                <span class="counter">1</span>
                            </h3>
                        <h4 class="mb-0">@lang.GetKey("year_experiance")</h4>
                        </div>
                        <div class="feature-item">
                            <h3>
                                <span class="counter">100</span>%
                            </h3>
                        <h4 class="mb-0">@lang.GetKey("trusted_agency")</h4>
                        </div>
                        <div class="feature-item">
                            <h3>
                                <span class="counter">99</span>%
                            </h3>
                        <h4 class="mb-0">@lang.GetKey("travel_happinies")</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- end features -->